package app {	import app.IChingGraphics;	import app.GraphicElements;	import app.GameStyleSheet;	import app.XMLLoader;	import app.User;		import flash.display.*;	import flash.events.*;	import flash.text.*	import flash.utils.*;			public class IChingGame extends MovieClip {		internal static var menuWidth:uint = 160;		internal static var menuHeight:uint = 400;		public static var menuBg:Sprite = new Sprite();		public static var menu:Sprite = new Sprite();				public static var G:GraphicElements = new GraphicElements();		public static var css:GameStyleSheet = new GameStyleSheet();		public static var IG:IChingGraphics = new IChingGraphics();		public static var ICData:XMLList;		public static var test:XMLList;		public static var user:User = new User();		public static var ICTextDisplay:TextField = new TextField();				//public static var counter:uint;						public function IChingGame():void {			//define user Object									//draw menu logo			var xmlLoader:XMLLoader = new XMLLoader("data/IChing.xml");			xmlLoader.addEventListener(XMLLoader.DONELOADINGXML, getICData);			if (ICData) {				xmlLoader.removeEventListener(XMLLoader.DONELOADINGXML, getICData);				xmlLoader = null;			}						var xmlTester:XMLLoader = new XMLLoader("data/test.xml");			xmlTester.addEventListener(XMLLoader.DONELOADINGXML, testXML);			if (test) {				xmlTester.removeEventListener(XMLLoader.DONELOADINGXML, testXML);				xmlTester = null;			}						menuBg = G.drawMenuBg(0,0, menuWidth, menuHeight, 16, 1);			menuBg.name = "menu_Bg";			menuBg.x = 395;						addChild(menuBg);									//draw menu			var menuItemIChing:Sprite = G.drawMenuItem("IChing",1);			menuItemIChing.name = "menu_Item_IChing";			menu.addChild(menuItemIChing);			var menuItemLevel1 = G.drawMenuItem("Level1",2);			menuItemLevel1.name = "menu_Item_Level1";			menu.addChild(menuItemLevel1);									var menuItemLevel2 = G.drawMenuItem("Level2",3);			menuItemLevel2.name = "menu_Item_Level2";			menu.addChild(menuItemLevel2);									menu.x = menuBg.x + 12; //12 is the left padding of the menu text from menu Bg			addChild(menu);																					//draw app logo			IG.lineWidth = 60;			IG.color = css.colorScheme.white;			var Ilogo:Sprite = IG.squareSymbol(IG.drawRandom(6));			Ilogo.alpha = 0.05;			Ilogo.x =Ilogo.y = menuHeight/2 - IG.lineWidth - 10;			addChild(Ilogo);											}//close constructor Intro()								private function getICData(e:Event):void {		ICData = e.target.getXML();		}				private function testXML(e:Event):void {		test = e.target.getXML();		}			}//close class Intro()}//close package