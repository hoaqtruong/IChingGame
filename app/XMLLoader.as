package app {		import flash.display.*;	import flash.events.*;	import flash.net.*;			public class XMLLoader extends Sprite  {		private var _xmlList:XMLList;		public static var DONELOADINGXML:String = "done";		//public var loaded:Boolean;				public function XMLLoader(XMLFilePath:String) {			// constructor code			//loaded = false;			var urlLoader = new URLLoader();			var urlRequest:URLRequest = new URLRequest(XMLFilePath);			urlLoader.load(urlRequest);			urlLoader.addEventListener(Event.COMPLETE, completeLoading );			if(_xmlList) {				urlLoader.removeEventListener(Event.COMPLETE, completeLoading);				urlLoader = null;				}		}				private function completeLoading(e:Event):void {				var xmlData:XML = new XML(e.target.data);				_xmlList = xmlData.*;				dispatchEvent(new Event(XMLLoader.DONELOADINGXML));				if(_xmlList) {xmlData = null;}		}				public function getXML():XMLList {			return _xmlList;		}	}	}