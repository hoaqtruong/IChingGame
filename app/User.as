package app {	import flash.display.*;	import flash.text.TextField;	import flash.events.*;		public class User extends EventDispatcher {		public var level1:Object = new Object();		public var questions:Array = new Array();		public var score:uint = new uint(0);		public var scoreDisplay:Sprite = new Sprite();				public function User() {			// constructor code								}		public function displayScore():Sprite {			var scoreBoard:Sprite = new Sprite();			var txt:TextField = new TextField();			txt.width = 120;			txt.styleSheet = IChingGame.css.style;			if (score == 0 || score == 1) {				txt.text = "<score>"+score+"</score><point>point</point>";			} else {				txt.text = "<score>"+score+"</score><point>points</point>";			}			scoreBoard.addChild(txt);			scoreDisplay = scoreBoard;			return scoreBoard;					}	}	}